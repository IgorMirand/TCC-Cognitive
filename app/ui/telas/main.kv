<MainScreen>
    name: "main"
    MDFloatLayout:
        md_bg_color: (146/255, 199/255, 163/255, 1)
        # --- Texto Superior ---
        MDLabel:
            text: "Bem Vindo ao"
            halign: 'center'
            # Posição: 85% do topo, centralizado no eixo X
            pos_hint: {'center_x': .5, 'top': 1.3}
            font_style: 'H5'
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1) # Cor escura

        # --- Bloco Central (Logo + Nome) ---
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_size: True # Ocupa o tamanho dos filhos
            pos_hint: {'center_x': .5, 'center_y': .6} # Posição central
            spacing: '10dp'

            Image:
                # *** ATENÇÃO: Substitua 'flor_logo.png' pelo caminho/nome do seu arquivo de imagem ***
                source: "app/assets/img.png"
                size_hint: None, None
                size: "120dp", "120dp" # Logo maior nesta tela
                allow_stretch: True
                # Centraliza a imagem dentro do BoxLayout
                pos_hint: {'center_x': .5}

            MDLabel:
                text: "cognitive"
                halign: 'center'
                font_style: 'H4' # Fonte grande
                theme_text_color: "Custom"
                # Cor escura, levemente marrom/cinza, como na imagem
                text_color: (80/255, 70/255, 70/255, 1)
                # NOTA: A fonte da imagem é personalizada.
                # Para usá-la, adicione: font_name: 'caminho/para/sua/fonte.ttf'


        # --- Bloco de Botões Inferiores ---
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .7, None # 70% da largura da tela
            height: self.minimum_height # Altura se ajusta aos botões
            pos_hint: {'center_x': .5, 'y': .15} # Posição: 15% da base
            spacing: '15dp'

            # --- Botão "Entrar" ---
            MDFillRoundFlatButton:
                text: "Entrar"
                size_hint: 1, None # Ocupa 100% da largura do MDBoxLayout pai
                height: "50dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current = "login"

            # --- Botão "Cadastrar" ---
            MDFillRoundFlatButton:
                text: "Cadastrar"
                size_hint: 1, None
                height: "50dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current = "register"