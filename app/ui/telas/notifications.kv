<Notification>:
    name: "notifications"
    MDFloatLayout:
        md_bg_color: (146/255, 199/255, 163/255, 1)
        # --- Logo (pequeno, no canto) ---
        Image:
            source: 'flor_logo.png'
            size_hint: None, None
            size: "40dp", "40dp"
            allow_stretch: True
            pos_hint: {'x': .05, 'top': .98}

        # --- Botão VOLTAR ---
        MDTextButton:
            text: "Voltar"
            pos_hint: {'right': .9, 'y': .01} # Posição no canto inferior direito
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1)
            # --- AÇÃO DE NAVEGAÇÃO ---
            # Ao ser pressionado, volta para a tela 'home'
            on_release: app.root.current = 'home'

        # --- Lista de Notificações com Scroll ---
        ScrollView:
            # Posicionado para não sobrepor o logo e o botão voltar
            size_hint: .9, .82
            pos_hint: {'center_x': .5, 'top': .9}
            bar_width: 0 # Esconde a barra de rolagem

            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                padding: "10dp"
                spacing: "10dp"

                # --- Card de Notificação 1 (Com botões) ---
                MDCard:
                    orientation: "vertical"
                    size_hint: 1, None
                    adaptive_height: True
                    radius: [15]
                    md_bg_color: (1,1,1,1) # Fundo branco
                    padding: "10dp"
                    spacing: "5dp"

                    MDBoxLayout: # Linha do Título
                        adaptive_height: True
                        MDIcon:
                            icon: "information-outline"
                        MDLabel:
                            text: "Nova mensagem"
                            bold: True
                        Widget: # Espaçador
                            size_hint_x: 1.0
                        MDIconButton:
                            icon: "close"

                    MDLabel: # Texto da mensagem
                        text: "Você dormiu bem na última noite?"
                        adaptive_height: True

                    MDSeparator:
                        height: "1dp"

                    MDBoxLayout: # Linha das Ações
                        adaptive_height: True
                        spacing: "10dp"
                        MDIconButton:
                            icon: "thumb-up-outline"
                        MDIconButton:
                            icon: "thumb-down-outline"

                # --- Card de Notificação 2 ---
                MDCard:
                    orientation: "vertical"
                    size_hint: 1, None
                    adaptive_height: True
                    radius: [15]
                    md_bg_color: (1,1,1,1)
                    padding: "10dp"
                    spacing: "5dp"
                    MDBoxLayout: # Linha do Título
                        adaptive_height: True
                        MDIcon:
                            icon: "information-outline"
                        MDLabel:
                            text: "Nova mensagem"
                            bold: True
                        Widget:
                            size_hint_x: 1.0
                        MDIconButton:
                            icon: "close"
                    MDLabel:
                        text: "Lembre-se: cada pequeno passo conta para o seu bem-estar."
                        adaptive_height: True

                # --- Card de Notificação 3 ---
                MDCard:
                    orientation: "vertical"
                    size_hint: 1, None
                    adaptive_height: True
                    radius: [15]
                    md_bg_color: (1,1,1,1)
                    padding: "10dp"
                    spacing: "5dp"
                    MDBoxLayout: # Linha do Título
                        adaptive_height: True
                        MDIcon:
                            icon: "information-outline"
                        MDLabel:
                            text: "Nova mensagem"
                            bold: True
                        Widget:
                            size_hint_x: 1.0
                        MDIconButton:
                            icon: "close"
                    MDLabel:
                        text: "Esse momento vai passar. Você é mais forte do que pensa."
                        adaptive_height: True

                # --- Card de Notificação 4 ---
                MDCard:
                    orientation: "vertical"
                    size_hint: 1, None
                    adaptive_height: True
                    radius: [15]
                    md_bg_color: (1,1,1,1)
                    padding: "10dp"
                    spacing: "5dp"
                    MDBoxLayout: # Linha do Título
                        adaptive_height: True
                        MDIcon:
                            icon: "information-outline"
                        MDLabel:
                            text: "Nova mensagem"
                            bold: True
                        Widget:
                            size_hint_x: 1.0
                        MDIconButton:
                            icon: "close"
                    MDLabel:
                        text: "Você merece cuidado, amor e descanso."
                        adaptive_height: True