<DiarioScreen>:
    name: "diario"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)
        md_bg_color: (146/255, 199/255, 163/255, 1)

        Image:
            source: "app/assets/img.png"  # seu ícone PNG
            size_hint: None, None
            size: dp(70), dp(70)
            pos_hint: {"center_x": 0.5}
            allow_stretch: True
            keep_ratio: True

        # Card da tabela
        MDCard:
            orientation: "vertical"
            size_hint_y: None
            height: dp(300)
            md_bg_color: 0.9, 0.9, 0.9, 1
            padding: dp(10)
            radius: [10, 10, 10, 10]

            MDGridLayout:
                cols: 2
                spacing: dp(2)
                adaptive_height: True
                row_force_default: True
                row_default_height: dp(35)

                # Cabeçalho
                MDLabel:
                    text: "Dia - hora"
                    halign: "center"
                    bold: True
                    md_bg_color: 0.85, 0.85, 0.85, 1
                MDLabel:
                    text: "Anotações"
                    halign: "center"
                    bold: True
                    md_bg_color: 0.85, 0.85, 0.85, 1

                # Primeira linha
                MDLabel:
                    text: "25/06/2025 - 12:30:03"
                    halign: "center"
                    theme_text_color: "Primary"
                MDLabel:
                    text: "Nessa consulta o usuário falou um pouco mais sobre suas músicas favoritas"
                    halign: "left"
                    text_size: self.width, None
                    theme_text_color: "Secondary"

                # Linha em branco (simulando mais espaço)
                MDLabel:
                    text: ""
                MDLabel:
                    text: ""

        # Navigation bar inferior
        MDNavigationBar:
            height: dp(60)
            elevation: 2

            MDNavigationItem:
                name: "home"
                text: "Home"
                on_release: root.on_nav_item_press("home")
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {"center_x": 0.5}
                    Image:
                        source: "app/assets/home.png"
                        allow_stretch: True
                        keep_ratio: True

            MDNavigationItem:
                name: "conta"
                text: "Conta"
                on_release: root.on_nav_item_press("conta")
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {"center_x": 0.5}
                    Image:
                        source: "app/assets/account.png"
                        allow_stretch: True
                        keep_ratio: True
