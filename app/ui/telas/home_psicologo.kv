<PsychoHomeScreen>:
    name: "home_psicologo"
    md_bg_color: (176/255, 214/255, 176/255, 1) # Fundo verde
    MDFloatLayout:

        Image:
            source: 'app/assets/img.png' # O caminho do seu logo
            size_hint: None, None
            size: "80dp", "80dp"
            allow_stretch: True
            pos_hint: {'center_x': .5, 'top': .96}

        MDLabel:
            id: id_label # <-- Damos um ID para o .py poder atualizá-lo
            text: "ID : ****"
            pos_hint: {'center_x': .5, 'top': .85}
            halign: 'center'
            font_style: 'H6'
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1)

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {'center_x': .5, 'center_y': .6} # Centraliza os botões
            spacing: "15dp"

            MDFillRoundFlatButton:
                text: "Pacientes"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1) # Fundo claro
                text_color: (0.2, 0.2, 0.2, 1) # Texto escuro
                font_size: "16sp"
                on_release: root.navigate_to('pacientes_list') # Exemplo

            MDFillRoundFlatButton:
                text: "Estatisticas"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: root.navigate_to('estatisticas') # Exemplo

            MDFillRoundFlatButton:
                text: "Consultas"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: root.navigate_to('consultas') # Exemplo

            MDFillRoundFlatButton:
                text: "Relatório"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: root.navigate_to('relatorio') # Exemplo

        MDFillRoundFlatButton:
            text: "Home"
            pos_hint: {'center_x': .3, 'y': .2} # Posição: 10% da base, centro X
            size_hint: .3, None # 70% da largura da tela
            height: "48dp"
            # Cor de fundo cinza-claro, como na imagem
            md_bg_color: (223/255, 236/255, 230/255, 1)
            # Cor do texto preta
            text_color: (0, 0, 0, 1)
            font_size: "16sp"

        MDFillRoundFlatButton:
            text: "Sair"
            pos_hint: {'center_x': .7, 'y': .2} # Posição: 10% da base, centro X
            size_hint: .3, None # 70% da largura da tela
            height: "20dp"
            # Cor de fundo cinza-claro, como na imagem
            md_bg_color: (223/255, 236/255, 230/255, 1)
            # Cor do texto preta
            text_color: (0, 0, 0, 1)
            font_size: "16sp"
            elevation: 3
            on_release: app.root.current = "main"