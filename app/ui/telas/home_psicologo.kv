<PsychoHomeScreen>:
    name: "home_psicologo"
    md_bg_color: (176/255, 214/255, 176/255, 1) # Fundo verde
    MDFloatLayout:
        Image:
            source: 'app/assets/img.png' # O caminho do seu logo
            size_hint: None, None
            size: "80dp", "80dp"
            allow_stretch: True
            pos_hint: {'center_x': .5, 'top': .96}

        MDLabel:
            id: id_label # <-- Damos um ID para o .py poder atualizá-lo
            text: "ID : ****"
            pos_hint: {'center_x': .5, 'top': .55}
            halign: 'center'
            font_style: 'Display'
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1)

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {'center_x': .5, 'center_y': .6}
            spacing: "20dp"

            MDButton:
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                MDButtonText:
                    text: "Pacientes"


            MDButton:
                tsize_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                MDButtonText:
                    text: "Estatisticas"

            MDButton:
                tsize_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                MDButtonText:
                    text: "Consultas"

            MDButton:
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                MDButtonText:
                    text: "Relatório"
                

            MDButton:
                ssize_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current= "consulta_anotacao"
                MDButtonText:
                    text: "Nova Anotação"

            MDButton:
                ssize_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current= "adicionar_atividade"
                MDButtonText:
                    text: "Nova Atividade"

            MDFabButton:
                icon: "plus"
                # KivyMD 2.0.0: Define as cores do botão
                theme_bg_color: "Custom"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                theme_icon_color: "Custom"
                pos_hint: {"center_x": 0.5, "y": 0.15} # Posição em baixo, acima da nav bar
                on_release: root.show_email_dialog() # <-- Mudado de 'gerar_convite'
                    
        MDButton:
            size_hint: 1, None
            height: "60dp"
            md_bg_color: (240/255, 240/255, 240/255, 1)
            text_color: (0.2, 0.2, 0.2, 1)
            font_size: "16sp"            
            pos_hint: {'center_x': .1, 'y': .9}
            on_release: app.root.current = "main"
            MDButtonText:
                text: "Sair"
        
        