<PsychoHomeScreen>:
    name: "home_psicologo"
    md_bg_color: (176/255, 214/255, 176/255, 1) # Fundo verde
    MDFloatLayout:

        Image:
            source: 'app/assets/img.png' # O caminho do seu logo
            size_hint: None, None
            size: "80dp", "80dp"
            allow_stretch: True
            pos_hint: {'center_x': .5, 'top': .96}

        MDLabel:
            id: id_label # <-- Damos um ID para o .py poder atualizá-lo
            text: "ID : ****"
            pos_hint: {'center_x': .5, 'top': .85}
            halign: 'center'
            font_style: 'Display'
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1)

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {'center_x': .5, 'center_y': .6} # Centraliza os botões
            spacing: "15dp"

            MDButton:
                text: "Pacientes"
                style: "filled"
                pos_hint: {'center_x': .7, 'y': .2}
                size_hint: .3, None
                height: "20dp"
                md_bg_color: (223/255, 236/255, 230/255, 1)
                text_color: (0, 0, 0, 1)
                font_size: "16sp"
                elevation: 3
                radius: [20, 20, 20, 20]  # deixa o botão arredondado

            MDButton:
                text: "Estatisticas"
                style: "filled"
                pos_hint: {'center_x': .7, 'y': .2}
                size_hint: .3, None
                height: "20dp"
                md_bg_color: (223/255, 236/255, 230/255, 1)
                text_color: (0, 0, 0, 1)
                font_size: "16sp"
                elevation: 3
                radius: [20, 20, 20, 20]  # deixa o botão arredondado

            MDButton:
                text: "Consultas"
                style: "filled"
                pos_hint: {'center_x': .7, 'y': .2}
                size_hint: .3, None
                height: "20dp"
                md_bg_color: (223/255, 236/255, 230/255, 1)
                text_color: (0, 0, 0, 1)
                font_size: "16sp"
                elevation: 3
                radius: [20, 20, 20, 20]  # deixa o botão arredondado

            MDButton:
                text: "Relatório"
                style: "filled"
                pos_hint: {'center_x': .7, 'y': .2}
                size_hint: .3, None
                height: "20dp"
                md_bg_color: (223/255, 236/255, 230/255, 1)
                text_color: (0, 0, 0, 1)
                font_size: "16sp"
                elevation: 3
                radius: [20, 20, 20, 20]  # deixa o botão arredondado
        MDButton:
            text: "Home"
            style: "filled"
            pos_hint: {'center_x': .7, 'y': .2}
            size_hint: .3, None
            height: "20dp"
            md_bg_color: (223/255, 236/255, 230/255, 1)
            text_color: (0, 0, 0, 1)
            font_size: "16sp"
            elevation: 3
            radius: [20, 20, 20, 20]  # deixa o botão arredondado

        MDButton:
            text: "Sair"
            style: "filled"
            pos_hint: {'center_x': .7, 'y': .2}
            size_hint: .3, None
            height: "20dp"
            md_bg_color: (223/255, 236/255, 230/255, 1)
            text_color: (0, 0, 0, 1)
            font_size: "16sp"
            elevation: 3
            radius: [20, 20, 20, 20]  # deixa o botão arredondado
            on_release: app.root.current = "main"