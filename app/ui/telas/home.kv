<HomeScreen>:
    name: "home"
    MDFloatLayout:
        md_bg_color: (146/255, 199/255, 163/255, 1)

        # --- Logo (Flor) ---
        Image:
            # *** Substitua pelo caminho da sua imagem ***
            source: "app/assets/img.png"
            size_hint: None, None
            size: "80dp", "80dp"
            allow_stretch: True
            pos_hint: {'center_x': .5, 'top': .96}

        # --- Ícone de Notificação (Sino) ---
        MDIconButton:
            icon: "bell-outline"
            pos_hint: {'right': .95, 'top': .96}
            theme_text_color: "Custom"
            text_color: (0.2, 0.2, 0.2, 1)
            # --- AÇÃO DE NAVEGAÇÃO ---
            # Ao ser pressionado, muda a tela atual para 'notifications'
            on_release: app.root.current = 'notifications'

        # --- Container para os Botões Centrais ---
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {'center_x': .5, 'center_y': .6}
            spacing: "20dp"

            MDButton:
                text: "Registre como foi seu dia"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current = 'sentimento'

            MDButton:
                text: "Diario"
                size_hint: 1, None
                height: "60dp"
                md_bg_color: (240/255, 240/255, 240/255, 1)
                text_color: (0.2, 0.2, 0.2, 1)
                font_size: "16sp"
                on_release: app.root.current = 'diario'

        # --- Navegação Inferior (Textos) ---

        MDButton:      
            style: "elevated" 
            theme_width: "Custom"
            pos_hint: {'center_x': .5, 'y': .15}
            height: "56dp"
            size_hint_x: .5  
            
            MDButtonText:
                text: "Home"


        MDButton:      
            style: "elevated" 
            theme_width: "Custom"
            pos_hint: {'center_x': .5, 'y': .15}
            height: "56dp"
            size_hint_x: .5  
            on_release: app.root.current = "main"

            MDButtonText: 
                text: "Voltar"